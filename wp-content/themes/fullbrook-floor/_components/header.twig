<header class="w-full border-b-2 border-white bg-primary-dark lg:fixed lg:z-20 lg:top-0 lg:left-0 lg:pt-0">

  <p class="p-2 text-sm text-center text-white bg-secondary xl:hidden">Find out how much your home is worth today! <span class="inline-block font-bold">Call
    {% include "_components/phone-number.twig" %}</span>
  </p>

  <div class="container items-center justify-between header-container lg:flex">

    <div class="flex flex-wrap justify-between">

      <a aria-label="Go to homepage" class="block w-2/3 clear lg:w-auto lg:inline-block" href="{{site.site_url}}">
        <img class="block w-full py-4 min-h-24 lg:py-0 max-w-64" src="{{options.logo_horizontal_white.url}}" alt="{{site.title}} Logo" />
      </a>

      <div class="flex items-center justify-end w-1/3 p-2 text-center text-white menu-btn lg:hidden">
        {{ function('icon', 'bars') }}<span class="ml-1 font-bold">Menu</span></div>

    </div>    

    

    <div class="items-center justify-end lg:flex">

      <nav id="menu-primary" class="hidden menu lg:block">
        <ul class="flex flex-wrap justify-center w-full menu-primary">
          {% for item in primaryMenu.items %}
          <li class="{{item.class}} {{ item.current ? 'current-menu-item' }}">
            <a href="{{item.link}}">{{item.name}}</a>
            {% if item.children %}
            <ul class="sub-menu">
              {% for child in item.children %}
              <li class="{{child.class}}">
                <a href="{{child.link}}">{{child.name}}</a>
              </li>
              {% endfor %}
            </ul>
            {% endif %}
          </li>
          {% endfor %}
        </ul>
      </nav>
      
      {% include "_components/phone-number.twig" with {
        classes : "hidden rounded-full bg-white text-primary-dark py-2 px-4 font-bold xl:block xl:ml-2 xl:text-sm 2xl:text-base hover:bg-primary-light"
      } %}

     
    </div>
   
  </div>
  

</header>