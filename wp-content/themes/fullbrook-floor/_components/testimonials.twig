{% if testimonials|length > 0 %}

    <div class="relative py-8 bg-repeat-x lg:py-12 bg-primary">

        <div class="container flex-wrap items-center w-full text-center text-white lg:flex">

            <h3 class="w-full text-2xl lg:text-3xl">What our clients say...</h3>

            {% for testimonial in testimonials %}
                <div class="w-full p-8 my-8 lg:w-1/3 xl:px-16 testimonial">
                    {{testimonial.meta('testimonial')}}
                
                    <p class="mt-4 text-lg font-bold text-primary-dark">{{testimonial.meta('name')}}</p>
                </div>
            {% endfor %}

        </div>

        <div class="absolute bottom-0 left-0 w-full h-10 bg-repeat-x pattern-house "></div>
        
    </div>
{% endif %}
