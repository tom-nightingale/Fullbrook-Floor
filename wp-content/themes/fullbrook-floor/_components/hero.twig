    {# {% include "_components/btn-free-valuation.twig" with {
      classes : "mt-4 btn btn-secondary xl:mt-12 text-sm lg:text-base",
    } %} #}
    <a href="{{site.url}}/instant-valuation" class="mt-4 text-sm btn btn-secondary xl:mt-12 lg:text-base">Get an INSTANT online valuation</a>
    <a href="{{site.url}}/buy-a-home" class="mt-4 text-sm bg-opacity-75 btn btn-white hover:bg-opacity-100">Search homes for sale</a>

    {% include "_components/pattern-house.twig" %}
  </div>

  <div class="relative bg-bottom bg-cover md:w-1/2 min-h-96 lg:min-h-128 carousel">
      {% for image in post.meta('hero_carousel') %}                
          {% include "_components/picture.twig" with {
            pictureClasses: 'carousel-image',
            source: image.url,
            breakpoints: {
              "1600px" : {
                w: 1200,
                h: 800,
                crop: 'center'
              },
              "768px" : {
                w: 800,
                h: 600,
                crop: 'center'
              },
              "640px" : {
                w: 400,
                h: 300,
                crop: 'center'
              },
            },
            img: {
              classes: 'absolute top-0 left-0 object-cover object-top w-full h-full lazyload',
              alt: site.title,
              w: null,
              h: 600,
              crop: 'center',
            }
          }
        %}
    {% endfor %}   
    
  </div>


</div>

{% else %}

  <div class="relative w-full text-white bg-primary lg:mt-36">
    <div class="container">
      <p class="px-6 text-2xl font-bold text-center {{has_search_bar ? "py-8 lg:p-12 lg:py-16" : "py-8 lg:p-12 lg:py-16 lg:pt-20" }} xl:text-4xl 2xl:text-5xl">{{hero_heading}}</p>
    </div>
    {% include "_components/pattern-house.twig" %}
  </div>

  {% if has_search_bar %}
    {% include "_components/property-search.twig" %}
  {% endif %}

{% endif %}