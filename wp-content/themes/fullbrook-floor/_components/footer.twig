<footer class="relative p-4 text-sm text-center text-white bg-primary-dark md:p-8 lg:px-0 lg:text-left">

	<div class="container flex-wrap justify-between lg:flex">

		<div class="w-full p-4 mb-8 lg:w-3/12 xl:p-6">			
			
			<a aria-label="Go to homepage" class="block mb-4 lg:inline-block" href="{{site.site_url}}">
				<img class="w-full mx-auto max-w-64" src="{{options.logo_horizontal_white.url}}" alt="{{site.title}} Logo"/>
			</a>
			
			<p class="mt-4">Fullbrook &amp; Floor is a trading name of Fullbrook and Floor.</p>
			<p class="mb-4">{{site.title}} is a registered company in England &amp; Wales.</p>
			{% if options.reg_number %}
				<p>Registered Number: {{options.reg_number}}</p>
			{% endif %}
			
			{% if options.vat_number %}
				<p>VAT Number: {{options.vat_number}}</p>
			{% endif %}

			<p class="mt-4">&copy; {{site.title}} {{ 'now' | date('Y') }}. All Rights Reserved.</p>
			
		</div>

		<div class="w-full p-4 mb-8 lg:w-3/12 xl:p-6">
			<h3>Navigation</h3>
			<ul>
				{% for item in primaryMenu.items %}
				<li class="{{item.class}}">
					<a href="{{item.url}}">{{item.name}}</a>
				</li>
				{% endfor %}
			</ul>
		</div>

		<div class="w-full p-4 mb-8 lg:w-3/12 xl:p-6">
			<h3>Contact</h3>
			{{ function('address_stacked') }}			

			<p class="my-2">{{function('icon', 'envelope', 'mr-2')}} <a href="mailto:{{options.site_email}}">{{options.site_email}}</a></p>
			<p class="my-2">{{function('icon', 'phone', 'mr-2')}} <a href="tel:{{options.default_phone_number}}">{{options.default_phone_number}}</a></p>
		</div>

		<div class="w-full p-4 lg:w-2/12">
			<h3>Social</h3>
			{% include "_components/social-links.twig" %}			
		</div>

	</div>

	{% include "_components/pattern-house.twig" %}

</footer>

<a id="back-top" class="fixed bottom-0 right-0 z-50 p-2 -mb-20 text-center transition-all duration-1000 bg-gray-500 opacity-0 rounded-xl hover:bg-gray-600" href="javascript:">
	<span class="text-sm text-black no-underline">
		{{ function('icon', 'angle-up', 'w-8 h-8') }}
		<span class="block text-lg uppercase">Top</span>
	</span>
</a>

<div id="pixel-to-watch"></div>

