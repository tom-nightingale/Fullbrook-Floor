<footer class="relative p-4 text-center text-white bg-primary-dark md:p-8 lg:px-0 lg:text-left">

	<div class="container flex-wrap lg:flex">

		<div class="w-full p-4 mb-8 text-sm lg:w-1/4">			
			
			<a aria-label="Go to homepage" class="block mb-8 lg:inline-block" href="{{site.site_url}}">
				<img class="w-full mx-auto max-w-64" src="{{options.logo_horizontal_white.url}}" alt="{{site.title}} Logo"/>
			</a>
			
			<a class="block" href="mailto:{{options.site_email}}">{{options.site_email}}</a>
			
			<p class="my-4">{{site.title}} is a registered company in England &amp; Wales. &copy;
			{{site.title}}
			{{ 'now' | date('Y') }}. All Rights Reserved.</p>
			{% if options.reg_number %}
				<p>Registered Number: {{options.reg_number}}</p>
			{% endif %}
			
			{% if options.vat_number %}
				<p>VAT Number: {{options.vat_number}}</p>
			{% endif %}
			
		</div>

		<div class="w-full p-4 mb-8 lg:w-1/4">
			<h6>Navigation</h6>
			<ul>
				{% for item in primaryMenu.items %}
				<li class="{{item.class}}">
					<a href="{{item.url}}">{{item.name}}</a>
				</li>
				{% endfor %}
			</ul>
		</div>

		<div class="w-full p-4 mb-8 lg:w-1/4">
			<h6>Address</h6>
			{{ function('address_stacked') }}			
		</div>

		<div class="w-full p-4 lg:w-1/4">
			<h6>Social</h6>
			{% include "_components/social-links.twig" %}			
		</div>

	</div>

	{% include "_components/pattern-house.twig" %}

</footer>

<a id="back-top" class="fixed bottom-0 right-0 z-50 p-2 -mb-20 text-center transition-all duration-1000 bg-gray-500 opacity-0 rounded-xl hover:bg-gray-600" href="javascript:">
	<span class="text-sm text-black no-underline">
		{{ function('icon', 'angle-up', 'w-8 h-8') }}
		<span class="block text-lg uppercase">Top</span>
	</span>
</a>

<div id="pixel-to-watch"></div>
