<div class="p-4 py-8 my-8 lg:py-12 bg-primary-light bg-opacity-20">

  <div class="container">

    <h2 class="text-center">Featured properties</h2>
    <p class="max-w-md mx-auto text-center">View a selection of our featured properties below. We have a huge portfolio available so we're sure you'll find your next dream home right here!</p>

    <div class="flex flex-wrap justify-center my-8">

      {% for property in featured_properties %}

          {% include "_components/property-card.twig" with {
              property_id : property.id,
              image : property.thumbnail,
              title : property.post_title,
              street : property._address_street,
              price : property._price_actual,
              price_qualifier : property.price_qualifier,
              link: property.link,
              bedrooms : property._bedrooms,
              bathrooms : property._bathrooms,
              reception_rooms : property._reception_rooms,
              }
          %}
          
      {% endfor %}
      

    </div>

    {% if hide_see_all == false %}
      <div class="text-center">
        <a href="{{site.url ~ '/buy-a-home'}}" class="inline-block mx-auto text-sm btn btn-white">See all properties</a>
      </div>
    {% endif %}

  </div>

</div>