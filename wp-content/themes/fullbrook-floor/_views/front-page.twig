{% extends 'base.twig' %}

{% block hero %}
  {% include "_components/hero.twig" with {
    front_page : true,
    top_line : post.meta('hero_top_line'),
    main_line : post.meta('hero_main_line'),
  } %}
{% endblock %}

{% block page_content %}

{% include "_components/buckets.twig" %}

<div class="container flex-wrap flex-grow lg:flex">
  
  <main class="lg:w-2/3 lg:pr-16">

    <article class="copy">

      <h1>{{post.title}}</h1>

      {{post.content}}

      {% include "_components/logos-clients.twig" %}
      
    </article>

  </main>

  <aside class="bg-gray-100 lg:w-1/3">
    {% include "_components/sidebar.twig" %}
  </aside>

</div>

{% include "_components/team.twig" %}

{% endblock %}
