{% extends 'base.twig' %}

{% block hero %}
  {% include "_components/hero.twig" with {
    hero_heading : post.meta('hero_heading')|default(post.title),
    has_search_bar : post.meta('has_search_bar'),
  } %}
{% endblock %}

{% block page_content %}

  <div class="container flex-wrap flex-grow lg:my-8 xl:my-24 lg:flex lg:px-8 2xl:px-40">
  
    <main class="mb-8 lg:w-1/2 lg:pr-16 lg:mb-0">
  
      <article class="copy">
  
        <h1>{{post.meta('h1') ? post.meta('h1') : post.title}}</h1>
  
        {{post.content}}
  
      </article>
  
      {% include "_components/cta-bottom.twig" %}
  
    </main>
  
    <aside class="items-center lg:w-1/2 lg:flex">
      {% include "_components/sidebar.twig" %}
    </aside>
  
  </div>

  

  <div class="p-4 py-8 my-8 lg:py-12 bg-primary-light bg-opacity-20">
  
    <div class="container">
  
      <h2 class="text-center">Why sell your property with Fullbrook & Floor?</h2>
      
      <p class="max-w-md mx-auto text-center">Lorem ipsum dolor sit amet consectetur adipisicing elit. Error sint molestiae voluptates nam, nesciunt odit. Quam libero laudantium eaque similique quisquam accusamus illo facere, amet, sit explicabo esse ipsam? Id?</p>
  
      <div class="flex flex-wrap justify-center my-8">

        {% for wcu in post.meta('why_choose_us') %}

        <div class="w-full p-4 text-center lg:p-8 lg:px-16 md:w-1/2 xl:w-1/3">

          <img class="block mx-auto mb-4 lazyload max-w-24" data-src="{{wcu.image.sizes.thumbnail}}" alt="{{site.title}}">
          
          <p class="mb-2 text-xl font-bold">{{wcu.title}}</p>
          
          {{wcu.text}}

        </div>

        {% endfor %}
  
      </div>
  
      <div class="text-center">
        <a class="text-sm font-bold" href="{{site.url}}/how-to-sell-a-home">Read our full property sales guide</a>
        <a href="{{site.url}}/contact-us" class="inline-block mx-2 btn btn-secondary">Start your property sale</a>
      </div>
  
    </div>
  
  </div>

  
  
  {% include "_components/team.twig" %}
  
{% endblock %}

