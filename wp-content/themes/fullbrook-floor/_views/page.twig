{% extends 'base.twig' %}

{% block hero %}
  {% include "_components/hero.twig" with {
    hero_heading : post.meta('hero_heading')|default(post.title),
    has_search_bar : post.meta('has_search_bar'),
  } %}
{% endblock %}

{% block page_content %}

  <div class="container flex-wrap flex-grow lg:flex">

    <main class="lg:w-2/3 lg:pr-16">

      <article class="copy">
        
        <h1>{{post.title}}</h1>
        
        {{post.content}}
        
      </article>

    </main>

    <aside class="bg-gray-100 lg:w-1/3">
      {% include "_components/sidebar.twig" %}
    </aside>

  </div>
  
  {% include "_components/team.twig" %}
  
{% endblock %}

