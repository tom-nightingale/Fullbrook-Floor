{% extends 'base.twig' %}

{% block hero %}

  {% include "_components/hero.twig" with {
    hero_heading : post.meta('hero_heading')|default(post.title),
    has_search_bar : post.meta('has_search_bar'),
  } %}
  
{% endblock %}

{% block page_content %}

  <div class="container flex-wrap flex-grow mt-8 xl:my-24 lg:flex lg:px-8 2xl:px-40">

    <picture class="block lazyload lg:w-1/2">      
      <source srcset="{{ post.meta('valuation_image').url|resize(900)|towebp }}" type="image/webp" media="(min-width:1024px)">
      <source srcset="{{ post.meta('valuation_image').url|resize(1000)|towebp }}" type="image/webp" media="(min-width:640px)">
      <source srcset="{{ post.meta('valuation_image').url|resize(640)|towebp }}" type="image/webp" media="(min-width:375px)">
      <source srcset="{{ post.meta('valuation_image').url|resize(640)|tojpg }}" type="image/jpeg">
      <img class="object-cover h-full" src="{{ post.meta('valuation_image').url|resize(640)|tojpg }}" alt="{{ post.title }}">
    </picture>

    <div class="flex flex-col justify-center p-8 text-center bg-gray-100 lg:w-1/2 lg:p-12 xl:p-16">

        <h2 class="text-secondary">Start your valuation</h2>

        <p class="mb-8">Provide a few details about your home to get your valuation started&hellip;</p>

        {{ function('do_shortcode', '[contact-form-7 id="667"]') }}

    </div>
  
  </div>

  {% include "_components/cta-sell-property.twig" %}

  <div class="container flex-wrap flex-grow mt-8 xl:my-24 lg:flex lg:px-8 2xl:px-40">

    <main class="mb-8 lg:w-1/2 lg:pr-16 lg:mb-0">
    
      <article class="copy">
    
        <h1>{{post.meta('h1') ? post.meta('h1') : post.title}}</h1>
    
        {{post.content}}
    
      </article>
    
      {% include "_components/cta-bottom.twig" %}
    
    </main>

    <div class="py-16 lg:px-16 lg:border-l lg:border-gray-300 lg:w-1/2">

      <span class="flex items-center justify-center w-16 h-16 mx-auto text-xl font-bold border-4 rounded-full process-step border-primary-dark">1</span>

      <p class="max-w-xs mx-auto my-6 font-bold text-center text-primary">Call {% include "_components/phone-number.twig" with { classes: 'text-secondary' } %} to speak to us and get book your valuation</p>

      <span
        class="flex items-center justify-center w-16 h-16 mx-auto text-xl font-bold border-4 rounded-full process-step border-primary-dark">2</span>

        <p class="max-w-xs mx-auto my-6 font-bold text-center text-primary">We'll come to your home and provide an accurate, <span class="text-secondary">no obligation</span> market valuation</p>

        <span
          class="flex items-center justify-center w-16 h-16 mx-auto text-xl font-bold border-4 rounded-full process-step border-primary-dark">3</span>

          <p class="max-w-xs mx-auto my-6 font-bold text-center text-secondary">With your valuation available, choose to sell your home with <span class="font-bold">Fullbrook &amp; Floor</span></p>

          <div class="mt-12 text-center">
            <a href="{{site.url}}/contact-us" class="mx-auto btn btn-secondary">Start your valuation</a>
          </div>

    </div>

  </div>

  {# {% if post.meta('faqs') %}

  <div class="container flex-wrap mt-8 xl:my-24 md:flex lg:px-8 2xl:px-40">

    {% for faq in post.meta('faqs') %}

    <div class="p-4 md:w-1/2 lg:w-1/3">
      <div class="h-full p-4 border border-gray-300 lg:p-8">
        <p class="mb-4 font-bold">{{faq.question}}</p>
        <p>{{faq.answer}}</p>
      </div>     
    </div>

    {% endfor %}
    
  </div>  

  {% endif %} #}

  {% if post.meta('show_why_choose_us') %}
    {% include "_components/why-choose-us.twig" %} 
  {% endif %}

  {% if post.meta('show_buckets') %}
    {% include "_components/buckets.twig" %}
  {% endif %}
  
  {% if post.meta('show_team') %}
    {% include "_components/team.twig" %}
  {% endif %}
  
{% endblock %}

