{% extends 'base.twig' %}

{% block hero %}
  {% include "_components/hero.twig" with {
    has_search_bar : true,
  } %}
{% endblock %}

{% block page_content %}

<div class="container flex-wrap flex-grow lg:flex">

  <main class="flex-wrap md:flex lg:w-2/3 lg:pr-16">
  
    {% for post in posts %}
  
    {% include "_components/help-advice-card.twig" %}
  
    {% endfor %}
  
  </main>
  
  <aside class="bg-gray-100 lg:w-1/3">
  
    {% include "_components/sidebar.twig" with {
        index : true,
        help_advice_categories : help_advice_categories,
        categories : categories,
        archives : archives
      } %}
  </aside>

</div>

{% endblock %}
